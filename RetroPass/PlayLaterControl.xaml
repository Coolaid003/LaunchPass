<UserControl
    x:Class="RetroPass.PlayLaterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RetroPass"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        x:Name="OverlayPlayLater"
        Height="32"
        MaxWidth="300"
        Margin="0,0,28,26"
        Padding="0,0,0,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Visibility="Collapsed">
        <Border
            Background="Black"
            CornerRadius="5"
            Opacity="0.78" />
        <TextBlock
            Margin="9,2,0,0"
            VerticalAlignment="Center"
            FontFamily="Segoe Xbox MDL2 Symbol"
            FontSize="20"
            Foreground="#318DAC"
            Text="&#xE3CB;" />
        <TextBlock
            Height="19"
            x:Name="StatusText"
            Margin="38,0,9,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            CharacterSpacing="40"
            FontSize="12"
            FontFamily="Xbox"
            Text="" />
    </Grid>
</UserControl>
