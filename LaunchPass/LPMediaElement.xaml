<!-- 
Summary: This is a UserControl for an Xbox UWP (Universal Windows Platform) application. 
It consists of a MediaElement and an Image inside a Grid. The MediaElement is set to auto-play and loop, 
and both MediaElement and Image are set to stretch and fill the available space.
    
"LaunchPass.LPMediaElement" Defines the UserControl class as LPMediaElement
-->
    <UserControl
    x:Class="LaunchPass.LPMediaElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaunchPass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <!-- Define a Grid container to hold the child elements -->
    <Grid> 
        <!-- Image element with Stretch and Margin set -->
        <Image x:Name="image1" Stretch="Fill" Margin="0"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" /> <!-- Set Horizontal and Vertical alignment -->
        
        <!-- MediaElement with auto-play, looping, stretch, and margin set -->
        <MediaElement x:Name="mediaElement1" AutoPlay="True" IsLooping="True" Margin="0" Stretch="Fill"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />   <!-- Set Horizontal and Vertical alignment -->
    </Grid>
</UserControl>